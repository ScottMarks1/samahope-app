<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="samahope.samahopeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MessagesActivity"/>
        <activity android:name=".ContactsActivity"/>
        <activity android:name=".AddContact"/>
        <activity android:name=".StoredActivity"/>
        <activity android:name=".DeletedActivity"/>
        <activity android:name=".ContactDetail"/>
        <activity android:name=".MessageDetail"/>
        <activity android:name=".SettingsMain"/>
        <activity android:name=".SendMessage"/>
        <activity android:name=".EditActivity"/>
        <activity android:name=".SendMessageToContact"/>

    </application>

</manifest>
