<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="samahope.samahopeapp.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <Button
                android:layout_width="0dp"
                android:id="@+id/button_messages"
                android:layout_height="match_parent"
                android:text="Messages"
                android:textColor="#0000ee"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:onClick="messages"
                android:layout_weight="1"/>
            <Button
                android:layout_width="30dp"
                android:id="@+id/button_messageNumber"
                android:layout_height="30dp"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:layout_weight="0"
                android:onClick="messages"
                android:text="1" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e0e0e0"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/button_stored"
            android:onClick="stored"
            android:textSize="20dp"
            android:textColor="#0000ee"
            android:textAllCaps="false"
            android:background="#ffffff"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Stored"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e0e0e0"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:id="@+id/button_deleted"
            android:onClick="deleted"
            android:background="#ffffff"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#0000ee"
            android:paddingRight="10dp"
            android:text="Deleted"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e0e0e0"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textColor="#0000ee"
            android:id="@+id/button_contacts"
            android:textAllCaps="false"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Contacts"
            android:onClick="contacts"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e0e0e0"
            android:text=""/>
        <Button
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textColor="#0000ee"
            android:id="@+id/button_edit"
            android:onClick="edit"
            android:textAllCaps="false"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Edit"
            />
    </LinearLayout>
</RelativeLayout>
